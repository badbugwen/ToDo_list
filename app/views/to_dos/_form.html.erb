
<div class="container">
  <% if @to_do.errors.present? %>
    <ul>
      <% @to_do.errors.each do |error, message| %>
        <li> <%= "#{error.capitalize}  #{message}" %></li>
      <% end %>
    </ul>
  <% end %>
      <%= form_for @to_do do |f| %>
      
          <div class="form-group">
            <%= f.label :name, "待辦事項" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
        
          <div class="form-group">
            <%= f.label :due_date, "完成期限" %></br>
            <%= f.date_select :due_date, class: "form-control" %>
          </div>
        
          <div class="form-group">
            <%= f.label :note, "詳細內容" %>
            <%= f.text_area :note, class: "form-control" %>
          </div>
        
        <button type="f.submit" class="btn btn-primary btn-lg pull-right">
          <span class="glyphicon glyphicon-floppy-disk"></span>
        </button>
        <button type="button" class="btn btn-secondary btn-lg pull-right" >
        <%= link_to to_dos_path do %><span class="glyphicon glyphicon-floppy-remove"></span><% end %>
      </button>
      
      <% end %> 
  
</div>